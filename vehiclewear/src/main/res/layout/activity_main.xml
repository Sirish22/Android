<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_picture">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:src="@drawable/car_rent"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/blue_border_rounded_cornwe">

            <!--            Input-->
            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/etUsernameIcon"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif"
                android:hint="Username"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="8sp" />

            <!--            Icon-->
            <ImageView
                android:id="@+id/etUsernameIcon"
                android:layout_width="12.7dp"
                android:layout_height="8.3dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:src="@drawable/user_pic" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_gravity="center"
            android:background="@drawable/blue_border_rounded_cornwe">

            <!-- INPUT -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="8sp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon"            android:background="@android:color/transparent"
                android:fontFamily="sans-serif"
                android:hint="Password"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="8sp" />

            <!-- ICON -->
            <ImageView
                android:id="@+id/icon"
                android:layout_width="12.7dp"
                android:layout_height="8.3dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:src="@drawable/password" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8.7dp"
            android:background="@drawable/blue_fill__rounded_color"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Login"
            android:textColor="#ffffff"
            android:textSize="8sp" />

    </LinearLayout>

</RelativeLayout>